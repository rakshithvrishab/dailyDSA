class Solution {
    public String reverseWords(String s) {
        StringBuilder sb = new StringBuilder();
            int insertIndex = 0;
            for (int i = s.length() - 1; i >= 0; i--) {
                char c = s.charAt(i);
                if (c == ' ') {
                    if (sb.length() > 0 && sb.charAt(sb.length() - 1) != ' ') {
                        sb.append(' ');
                        insertIndex = sb.length();
                    }
                } else {
                    sb.insert(insertIndex, c);
                }
            }
            return sb.toString().trim();
    }
}

